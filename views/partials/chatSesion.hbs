<form action="" id="formulario">
  <div class="mb-1 mt-2">
    <input type="email" class="form-control" placeholder="Email" name="email" id="email" required>
  </div>
  <div class="mb-1 mt-1">
    <input type="text" class="form-control" placeholder="Nombre" name="name" id="name" required>
  </div>
  <div class="mb-1 mt-1">
    <input type="text" class="form-control" placeholder="Apellido" name="lastname" id="lastname" required>
  </div>
  <div class="mb-1 mt-1">
    <input type="number" class="form-control" placeholder="Edad" name="age" id="age" required>
  </div>
  <div class="mb-1 mt-1">
    <input type="text" class="form-control" placeholder="Alias" name="alias" id="alias" required>
  </div>
  <div class="mb-2 mt-1">
    <input type="text" class="form-control" placeholder="Foto" name="avatar" id="avatar" required>
  </div>
  <div class="mb-3">
      <textarea class="form-control mb-2" id="comentario" placeholder="Escribe tu comentario aqui..." rows="3" name="message"></textarea>
      <button type="button" onclick="enviarMensaje()" id="send" class="btn btn-success">Enviar</button>
  </div>
</form>